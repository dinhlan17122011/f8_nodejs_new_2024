<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản lý khóa học</title>
  <!-- <link rel="stylesheet" href="/css/style.css"> -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
        </li>

        <% if (isLoggedIn) { %>
          <!-- Nếu người dùng đã đăng nhập -->
          <li class="nav-item">
            <a class="nav-link" href="/courses/add">Khóa học</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/courses/edd">Quản lý khóa học</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Đăng xuất</a> <!-- Thêm đường dẫn để đăng xuất -->
        </li>
        <% } else { %>
          <!-- Nếu người dùng chưa đăng nhập -->
          <li class="nav-item">
            <a class="nav-link" href="/login">Đăng nhập</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/register">Đăng ký</a>
          </li>
        <% } %>
      </ul>
      
    </div>
</nav>
  <div class="container">
    <h2>Quản lý khóa học</h2>
    <a href="/courses/add" class="btn">Thêm khóa học mới</a>
    <table>
      <thead>
        <tr>
          <th>Tên khóa học</th>
          <th>Giảng viên</th>
          <th>Ngày bắt đầu</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% courses.forEach(course => { %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.instructor %></td>
            <td><%= course.start_date %></td>
            <td>
              <a href="/courses/edit/<%= course._id %>">Chỉnh sửa</a>
              <a href="/courses/delete/<%= course._id %>">Xóa</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</html>
